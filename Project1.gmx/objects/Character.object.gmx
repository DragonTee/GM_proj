    if place_meeting(x+hsp,y-yplus,all)
    {
        while (!place_meeting(x+sign(hsp),y,all)) x+=sign(hsp);
        hsp = 0;
    }
    else
    {
        y -= yplus
    }
    }
}
x += hsp;
//vertical movement
