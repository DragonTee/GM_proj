    {
    while(!place_meeting(x,y+sign(vsp),all))
    {
        y += sign(vsp);
    }
    vsp = 0;
    }
}
y += vsp;
//crouching
if (key_crouch)
{
    if (!is_crouching)
    {
        is_crouching = true;
        image_yscale = 0.5;
        y +=16;
    }
}
else
{
    if (is_crouching)
