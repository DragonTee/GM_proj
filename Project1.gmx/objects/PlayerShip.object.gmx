          <argument>
            <kind>1</kind>
            <string>if (room = Space_system_room || room = Space_battle_room) //if not in menu
{
//rotation
if (keyboard_check(ord("A")))
{
    image_angle += rot_sp;
}

if (keyboard_check(ord("D")))
{
    image_angle -= rot_sp;
}
image_angle %= 360;
if(image_angle &lt; 0)
{
    image_angle += 360;
}
d = degtorad(image_angle);
//movement
if (keyboard_check(ord("W")))
{
    hsp += cos(d) * acc;
    vsp -= sin(d) * acc;
}

if (abs(hsp) &gt; EPS)
{
    hsp *= fric;
}
if (abs(vsp) &gt; EPS)
{
    vsp *= fric;
}
//collision
if (place_meeting(x + hsp, y + vsp, Block_obj))
{
    s = max(hsp, vsp);
    while (!place_meeting(x + sign(x) * s, y + sign(y) * s, Block_obj))
    {
        x += sign(x) * s;
        y += sign(y) * s;   
    }
}
else
{
    x += hsp;
    y += vsp;
}
//shooting
if (mouse_check_button(mb_left))
{
    with instance_create(x, y, bullet)
    {
        sp = 25 + random(5) - 2.5;
        motion_add(other.image_angle, sp);
    }
}
//zooming
if (mouse_wheel_up() &amp;&amp; (view_wview[0] * 0.5) / zoom &gt;= zoom_min)
{
    view_wview[0] *= 0.5;
    view_hview[0] *= 0.5;
    for (i = 0; background_visible[i]; i++)
    {
        background_xscale[i] *= 0.5 / global.parallax[i];
        background_yscale[i] *= 0.5 / global.parallax[i];
    }
}
if (mouse_wheel_down() &amp;&amp; (view_wview[0] * 2) / zoom &lt;= zoom_max)
{
    view_wview[0] *= 2;
    view_hview[0] *= 2;
    for (i = 0; background_visible[i]; i++)
    {
        background_xscale[i] *= 2 * global.parallax[i];
        background_yscale[i] *= 2 * global.parallax[i];
    }
}
//entering the battle
if (instance_exists(instance_nearest(x, y, EnemyFleet)))
{
    if (point_distance(x, y, instance_nearest(x, y, EnemyFleet).x, instance_nearest(x, y, EnemyFleet).y) &lt;= global.battle_distance &amp;&amp; global.battle_leaving == 0)
    {
        global.system_room = room;
        global.enemy = instance_nearest(x, y, EnemyFleet);
        global.battle_angle = point_direction(x, y, global.enemy.x, global.enemy.y);
        global.battle_fleet1_angle = image_angle;
        with instance_nearest(x, y, EnemyFleet)
        {
            global.battle_fleet2_angle = image_angle;
        }
        global.battle_space_type = "space";
        global.battle_leaving = 0;
        room_goto(Space_battle_room);
    }
    else
    if (global.battle_leaving == 1)
    {
        global.battle_leaving = 0;
        x -= global.battle_leaving_offset * cos(degtorad(global.battle_leaving_angle));
        y += global.battle_leaving_offset * sin(degtorad(global.battle_leaving_angle));
        image_angle = global.battle_leaving_ship_angle;
    }
}
if ((x &lt;= 0 || x &gt;= room_width || y &lt;= 0 || y &gt;= room_height) &amp;&amp; room == Space_battle_room)
{
    global.battle_leaving = 1;
    global.battle_leaving_ship_angle = image_angle;
    global.battle_leaving_angle = point_direction(x, y, room_width / 2, room_height / 2);
    room_goto(global.system_room);
}
//enter fleet setup screen
if (keyboard_check_pressed(ord("G")) &amp;&amp; room != Space_battle_room)
{
    global.system_room = room;
    room_goto(Fleet_setup_room);
}
}



